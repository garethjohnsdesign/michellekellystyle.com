<footer>
    <div class="flex justify-center p-8">
      {% for block in socials.socials.all() %}
      {% switch block.type %}
      {% case "instagram" %}
        <a href="{{block.socialLink}}" target="_blank"><svg class="h-6 w-6" fill="currentColor"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-instagram"></use></svg></a>
      {% case "twitter" %}
        <a href="{{block.socialLink}}" target="_blank"><svg class="h-6 w-6" fill="currentColor"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-twitter"></use></svg></a>
      {% case "facebook" %}
        <a href="{{block.socialLink}}" target="_blank"><svg class="h-6 w-6" fill="currentColor"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-facebook"></use></svg></a>
      {% case "vimeo" %}
        <a href="{{block.socialLink}}" target="_blank"><svg class="h-6 w-6" fill="currentColor"><use xlink:href="/assets/icons/symbol-defs.{{staticAssetsVersion}}.svg#icon-vimeo"></use></svg></a>
      {% endswitch %}
      {% endfor %}
    </div>
</footer>